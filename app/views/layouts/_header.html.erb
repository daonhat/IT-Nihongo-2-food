<nav class="navbar navbar-default">
  <div class="navbar-container">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" data-target="#bs-navbar-collapse-1" data-toggle="collapse" type="button">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= link_to root_path, title: "FoodStagram" do %>
          <i class="fa fa-picture-o fa-5" aria-hidden="true"></i><strong>  美味しい</strong>
        <% end %>
      </div>
    </div>
    <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%#= render 'notifications/notification_dropdown' %>
          </li>
          <li class="search-form">
            <div class="ui-widget">
              <input id="tags" placeholder="Enter any letter for search user">
              <input id="link_origin_id" name="link[origin_id]" type="hidden"/>
              <ul class="noresult"></ul>
            </div>
          </li>
          <li>
            <%= link_to new_food_path, class: "abcd", title: "New post" do %>
              <i class="fa fa-upload fa-5" aria-hidden="true"></i>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user), class: "abcd", title: "Profile" do %>
              <i class="fa fa-user fa-5" aria-hidden="true"></i>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: "abcd", title: "Log out" do %>
