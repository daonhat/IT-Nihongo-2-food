<script>
  $( function() {
    $( "#tags" ).autocomplete({
      source: '<%= foods_path(:json) %>',
      response: function(event, ui) {
        console.log(ui);
        if (ui.content.length === 0) {
            $(".noresult").html("<li class='noresult'>No results found</li>");
            $(".noresult").css("display", "block");
        } else {
            $(".noresult").empty();
        }
      },
      select: function(event, ui) {
          $('#tags').val(ui.item.email);
          $('#link_origin_id').val(ui.item.id);
                  return false;
              }
    })
    .data( "ui-autocomplete" )._renderItem = function( ul, item ) {
      console.log(item)
      var a = "users/"+item.id
      return $( '<a class="auto-li" href='+"<%= root_url %>"+"users/"+item.id+'></a>' )
        .data( "item.autocomplete", item )
        .append( '<img class="img-ava-mini" src="' + item.avatar.url + '" /><span>' + item.email.trim() + '</span>' )
        .appendTo( ul );
    };
  });
</script>
