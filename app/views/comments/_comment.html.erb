<div class="a_comment dn-cmt" id="comment-<%= comment.id %>">
  <div class="dn-user">

    <%= link_to "<strong>#{comment.user.name.nil? ? comment.user.email : comment.user.name }
      </strong>".html_safe, user_path(comment.user)%>

    <span class="comment-name-<%= comment.id %>"><%= comment.content %></span>

    <%= render "comments/comment_edit_form", comment: comment %>
    <br/>
    <h6><%= time_ago_in_words(comment.created_at) %>. </h6>
  </div>
  <% if current_user? comment.user %>
    <span class="glyphicon glyphicon-pencil pencil-<%= comment.id %>"
      aria-hidden="true" data-cmt="<%= comment.id %>"></span>

    <div class="content-action content-action-<%= comment.id %>">
      <ul>
        <li><%= link_to "Edit...", edit_comment_path(comment), remote: true %></li>
        <li><%= link_to "Delete...", comment, method: :delete,
          data: {confirm: "Are you sure?"}, remote: true %></li>
      </ul>
    </div>
  <% end %>
</div>
